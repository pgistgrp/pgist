<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>


    <form-beans>
        <form-bean name="loginForm" type="org.pgist.actions.LoginActionForm"></form-bean>
        <form-bean name="userForm" type="org.pgist.actions.UserForm"></form-bean>
        <form-bean name="sysAdminForm" type="org.pgist.actions.SysAdminForm"></form-bean>
    </form-beans>


    <global-exceptions>
    </global-exceptions>


    <global-forwards>
        <forward name="login"    path="/index.html"/>
        <forward name="register" path="/WEB-INF/register.vm"/>
    </global-forwards>


    <action-mappings>

        <action path="/login" type="org.pgist.actions.LoginAction" name="loginForm" scope="request">
            <forward name="success"  path="/WEB-INF/main.vm"/>
            <forward name="failure"  path="/WEB-INF/loginFailure.vm"/>
        </action>

        <action path="/logout" type="org.pgist.actions.LogoutAction" scope="request">
            <forward name="success"  path="/WEB-INF/main.vm"/>
            <forward name="failure"  path="/WEB-INF/loginFailure.vm"/>
        </action>

        <action path="/register" type="org.pgist.actions.RegisterAction" name="userForm" scope="request">
            <forward name="success"  path="/index.html"/>
            <forward name="failure"  path="/WEB-INF/register.vm"/>
        </action>

        <action path="/sysAdmin" type="org.pgist.actions.SysAdminAction" name="sysAdminForm" scope="request" parameter="action">
            <forward name="main"     path="/WEB-INF/sysadmin/main.vm"/>
            <forward name="notAdmin" path="/WEB-INF/sysadmin/notAdmin.vm"/>
            <forward name="failure"  path="/WEB-INF/sysadmin/failure.vm"/>
            <forward name="listUser" path="/WEB-INF/sysadmin/listUser.vm"/>
            <forward name="addUser"  path="/WEB-INF/sysadmin/addUser.vm"/>
            <forward name="listRole" path="/WEB-INF/sysadmin/listRole.vm"/>
            <forward name="addRole"  path="/WEB-INF/sysadmin/addRole.vm"/>
        </action>
        
    </action-mappings>


</struts-config>

